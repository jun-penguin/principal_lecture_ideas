<tr>
  <td>
    <%= comment.id %>
  </td>
  <td>
    <%= comment.post.title %>
  </td>
  <td>
    <%= comment.user.name %>
  </td>
  <td>
    <%= l comment.updated_at, format: :long %>
  </td>
  <td>
    <%= link_to t('defaults.show'), admins_comment_path(comment), class: 'btn btn-info' %>
    <%= link_to t('defaults.edit'), edit_admins_comment_path(comment), class: 'btn btn-success' %>
    <%= link_to t('defaults.delete'), admins_comment_path(comment), method: :delete, data: { confirm: t('defaults.message.delete_confirm') }, class: 'btn btn-danger' %>
  </td>
</tr>
