<div class="container pt-5">
  <div class="row mb-3">
    <div class="col-lg-8 offset-lg-2">
      <h1><%= t('.title') %></h1>
      <div class="text-right mb-3">
        <%= link_to t('defaults.edit'), edit_admins_comment_path(@comment), class: 'btn btn-success' %>
        <%= link_to t('defaults.delete'), admins_comment_path(@comment), method: :delete, data: { confirm: t('defaults.message.delete_confirm') }, class: 'btn btn-danger' %>
      </div>
      <!-- コメント内容 -->
      <table class="table table-bordered bg-white">
        <tr>
          <th scope="row"><%= Comment.human_attribute_name(:id) %></th>
          <td><%= @comment.id %></td>
        </tr>
        <tr>
          <th scope="row"><%= Comment.human_attribute_name(:post) %></th>
          <td><%= @comment.post.title %></td>
        </tr>
        <tr>
          <th scope="row"><%= Comment.human_attribute_name(:user) %></th>
          <td><%= @comment.user.name %></td>
        </tr>
        <tr>
          <th scope="row"><%= Comment.human_attribute_name(:body) %></th>
          <td><%= @comment.body %></td>
        </tr>
        <tr>
          <th scope="row"><%= Comment.human_attribute_name(:updated_at) %></th>
          <td><%= l @comment.updated_at, format: :long %></td>
        </tr>
      </table>
    </div>
  </div>
