<div class="container pt-5">
  <div class="row mb-3">
    <div class="col-lg-8 offset-lg-2">
      <h1><%= t('.title') %></h1>
      <div class="text-right mb-3">
        <%= link_to t('defaults.edit'), edit_admins_post_path(@post), class: 'btn btn-success' %>
        <%= link_to t('defaults.delete'), admins_post_path(@post), method: :delete, data: { confirm: t('defaults.message.delete_confirm') }, class: 'btn btn-danger' %>
      </div>
      <!-- 講話内容 -->
      <table class="table table-bordered bg-white">
        <tr>
          <th scope="row"><%= Post.human_attribute_name(:id) %></th>
          <td><%= @post.id %></td>
        </tr>
        <tr>
          <th scope="row"><%= Post.human_attribute_name(:title) %></th>
          <td><%= @post.title %></td>
        </tr>
        <tr>
          <th scope="row"><%= Post.human_attribute_name(:user) %></th>
          <td><%= @post.user.name %></td>
        </tr>
        <tr>
          <th scope="row"><%= Post.human_attribute_name(:description) %></th>
          <td><%= @post.description %></td>
        </tr>
        <tr>
          <th scope="row"><%= Post.human_attribute_name(:content) %></th>
          <td><%= @post.content %></td>
        </tr>
        <tr>
          <th scope="row"><%= Post.human_attribute_name(:grade_range) %></th>
          <td><%= @post.grade_range_i18n %></td>
        </tr>
        <tr>
          <th scope="row"><%= Post.human_attribute_name(:scene_type) %></th>
          <td><%= @post.scene_type_i18n %></td>
        </tr>
        <tr>
          <th scope="row"><%= Post.human_attribute_name(:status) %></th>
          <td><%= @post.status_i18n %></td>
        </tr>
        <tr>
          <th scope="row"><%= Post.human_attribute_name(:updated_at) %></th>
          <td><%= l @post.updated_at, format: :long %></td>
        </tr>
      </table>
    </div>
  </div>