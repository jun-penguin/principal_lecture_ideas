<div class="container pt-5">
  <div class="row mb-3">
    <div class="col-lg-8 offset-lg-2">
      <h1><%= "講話の詳細" %></h1>
      <div class="text-right mb-3">
        <%= link_to t('defaults.edit'), edit_admins_post_path(@post), class: 'btn btn-success' %>
        <%= link_to t('defaults.delete'), admins_post_path(@post), method: :delete, data: { confirm: t('defaults.message.delete_confirm') }, class: 'btn btn-danger' %>
      </div>
      <!-- 掲示板内容 -->
      <table class="table table-bordered bg-white">
        <tr>
          <th scope="row"><%= "ID" %></th>
          <td><%= @post.id %></td>
        </tr>
        <tr>
          <th scope="row"><%= "タイトル" %></th>
          <td><%= @post.title %></td>
        </tr>
        <tr>
          <th scope="row"><%= "投稿者" %></th>
          <td><%= @post.user.name %></td>
        </tr>
        <tr>
          <th scope="row"><%= "本文" %></th>
          <td><%= @post.content %></td>
        </tr>
        <tr>
          <th scope="row"><%= "対象学年" %></th>
          <td><%= @post.grade_range %></td>
        </tr>
        <tr>
          <th scope="row"><%= "使用シーン" %></th>
          <td><%= @post.scene_type %></td>
        </tr>
        <tr>
          <th scope="row"><%= "投稿日時" %></th>
          <td><%= l @post.created_at, format: :long %></td>
        </tr>
      </table>
    </div>
  </div>