<div class="container mb-5 pt-2">
  <h1><%= "講話一覧" %></h1>
  <div class="row">
    <div class="col-md-12 mb-3">
      <%
=begin%>
      <%= render 'search_form' %>
      <%
=end%>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col"><%= "ID" %></th>
            <th scope="col"><%= "タイトル" %></th>
            <th scope="col"><%= "投稿者" %></th>
            <th scope="col"><%= "投稿(更新)日時" %></th>
          </tr>
        </thead>
        <tbody>
          <%= render @posts %>
        </tbody>
      </table>
    </div>
  </div>
  <%
=begin%>
  <div class="row">
    <div class="col-md-12">
      <!-- ページネーション -->
      <%= paginate @posts %>
    </div>
  </div>
  <%
=end%>
</div>