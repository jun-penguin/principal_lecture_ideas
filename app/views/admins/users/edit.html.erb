<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= "ユーザー編集" %></h1>
      <%= form_with model: @user, url: admins_user_path(@user), local: true do |f| %>
      <%= render 'admins/shared/error_messages', object: f.object %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :self_introduction %>
        <%= f.text_field :self_introduction, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :status %>
        <%= f.select :status, User.statuses_i18n.invert, {}, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :prefecture %>
        <%= f.select :prefecture, User.prefectures_i18n.invert, {}, class: 'form-control' %>
      </div>

      <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>